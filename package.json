    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "compression": "^1.7.4",
    "next": "15.5.4",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.544.0",
    "tailwind-merge": "3.3.1",
    "tailwindcss-animate": "1.0.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/nodemailer": "^6.4.14",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.4",
    "@types/compression": "^1.7.5",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "@types/react": "19.1.15",
    "@types/react-dom": "19.1.9",
    "tailwindcss": "^4.1.9",
    "postcss": "8.5.6"
