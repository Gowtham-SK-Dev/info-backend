{
  "name": "nodejs-contact-backend",
  "version": "1.0.0",
  "description": "Node.js backend with contact form and email functionality",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:backend": "tsx watch src/index.ts",
    "dev:frontend": "next dev",
    "build": "tsc && next build",
    "build:backend": "tsc",
    "build:frontend": "next build",
    "start": "node dist/index.js",
    "start:backend": "node dist/index.js",
    "start:frontend": "next start",
    "clean": "rm -rf dist && rm -rf .next"
  },
  "keywords": [
    "nodejs",
    "express",
    "contact-form",
    "email"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "nodemailer": "^6.9.7",
    "cors": "^2.8.5",
